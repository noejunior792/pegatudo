{
  "manifest_version": 3,
  "name": "PegaTudo",
  "version": "2.1",
  "description": "Baixe v√≠deos, imagens e outros arquivos de qualquer site.",
  "permissions": [
    "downloads",
    "activeTab",
    "storage",
    "scripting",
    "unlimitedStorage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils.js", "content.js"],
      "css": ["popup.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/icon128.png"],
      "matches": ["<all_urls>"]
    }
  ]
}